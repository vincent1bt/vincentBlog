<div class="categories-container">
  <div class="categories-container-title">
    <h3 class="categories-container-title-h3">Categorias</h3>
  </div>
  
  <div class="categories-container-text">
    <ul class="categories-container-text-list">
      <% @categories.each do |category| %>
        <li class="categories-container-text-list-item">
          <h2 class="categories-container-text-list-item-parr">
            <%= link_to category, class: "categories-container-text-list-item-link" do %>
              <%= category.name.capitalize %>
            <% end %>
          </h2>
          <p><%= pluralize(@ar[category.name],"post", "posts") %></p>
        </li>
      <% end %>
    </ul>
  </div>
</div>